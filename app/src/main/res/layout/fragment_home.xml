<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/placementFragment"
    android:scrollbars="none"
    android:padding="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment" >

    <!-- TODO: HomeFragment -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageslider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_corner_radius="20"
                android:elevation="2dp"
                app:iss_error_image="@color/error"
                app:iss_period="3000"
                app:iss_placeholder="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_63sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/vision_and_mission"
                android:textSize="@dimen/_30ssp"
                android:fontFamily="@font/ar"
                android:gravity="center"
                android:textColor="@color/primary"
                android:background="@drawable/background_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/background_content_bottom"
                android:text="@string/vision"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans" />

        </LinearLayout>
    
</ScrollView>